<h3 class = 'blue'>Ending Soon</h3>
<div class='responsive'>
  <% @ending_soon.each do |project| %>
  <div class = 'col-sm-3 slide-tile'>
      <a href = '/projects/<%= find_user_id(project) %>/<%= project.id %>'>
      <p class = 'emphasis pink'><%= project.title %></p>
          <div class = 'col-lg-6'>
            <div class = 'image-container'>
            <%= image_tag project.image %>
            </div>
          </div>
        <div class = 'col-md-6'>
        <p><%= days_remaining(project) %> Days Left</p>
        <p><%= percent_complete(project) %>% funded</p>
        </div>
        <div class = 'col-lg-12'>
          <div class = 'progress progress-mini'>
            <div class = 'progress-bar blue-bar' role="progressbar" style="width: <%= percent_complete(project) %>%">
            </div>
            <div class = 'progress-bar grey-bar' role="progressbar" style="width: <%= percent_remaining(project) %>%">
            </div>
          </div>
          <div class = 'description'>
            <p><%= project.description %></p>
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>

<h3 class = 'blue'>New Projects</h3>
<div class='responsive'>
  <% @newest_projects.each do |project| %>
  <div class = 'col-sm-3 slide-tile'>
      <a href = '/projects/<%= project.title %>/<%= project.id %>'>
      <p class = 'emphasis pink'><%= project.title %></p>
