<h3 class = 'blue'>Projects Ending Soon</h3>

<div class='slider'>
  <% @projects.each do |project| %>
    <div class = 'slide-tile'>
      <p class = 'emphasis pink'><%= project.title %></p>
      <%= image_tag project.image %>
      <p>Ending: <%= project.expires_on %></p>
      <div class = 'progress'>
        <div class = 'progress-bar blue-bar progress-mini' role="progressbar" style="width: <%= percent_complete(project) %>%">
          $<%= project.total_donated %> raised!
        </div>
        <div class = 'progress-bar blue-bar progress-mini' role="progressbar" style="width: <%= percent_remaining(project) %>%">
          Only $<%= project.total_remaining %> to go!
        </div>
      </div>
    </div>
  <% end %>
</div>

<script type='text/javascript'>
  $(document).ready(function(){
      $('.slider').slick({
        dots: true,
      infinite: true,
      slidesToShow: 3,
      slidesToScroll: 3
  });
  });
</script>

