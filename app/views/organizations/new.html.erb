<div class = 'form center-form'>
  <%= form_for @organization, url: organizations_path do |f| %>
    <div class="form-group">
      <%= f.label "Name:" %>
      <%= f.text_field :name, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "Contact Phone:" %>
      <%= f.telephone_field :contact_phone, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "Population Served:" %>
      <%= f.text_field :population_served, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "Number of Individuals Served Nightly:" %>
      <%= f.text_field :number_served, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "Funding received annualy (in dollars):" %>
      <%= f.text_field :annual_funding, class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label "Address 1:" %>
      <%= f.text_field :shipping_address_1, class: 'form-control', autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label "Address 2:" %>
      <%= f.text_field :shipping_address_2, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "City:" %>
      <%= f.text_field :shipping_city, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "State:" %>
      <%= f.text_field :shipping_state, class: 'form-control', autofocus: true  %>
    </div>
    <div class="form-group">
      <%= f.label "Zip Code:" %>
      <%= f.text_field :shipping_postal_code, class: 'form-control', autofocus: true  %>
    </div>
    <%= f.hidden_field :approval_status, value: 'pending' %>
    <%= f.submit 'Submit', class: 'btn form-btn' %>
  <% end %>
</div>
